{#
/**
 * @file
 * Theme implementation to display the homepage.
 *
 * Available variables:
 * - homepage_carousel_view: Homepage Carousel embedded view.
 *
 * @see template_preprocess_page()
 */
#}

{% set page_sidebar_rendered = render_var(page.page_sidebar) %}
{# Set column class based on sidebar. #}
{% set col_class = page_sidebar_rendered ? 'col-xs-12 col-sm-8 col-md-9' : 'col-sm-12' %}

{# Site Header. #}
{% include base_path ~ directory ~ '/templates/pages/includes/site_header.html.twig' %}
{# / Site Header. #}

{% if homepage_carousel_view %}
  {{ homepage_carousel_view }}
{% endif %}

{# Main Content. #}
<div class="site-content">
  <div class="container">
    <div class="row">

        {% if page_sidebar_rendered %}
          <div class="col-xs-12 col-sm-4 col-md-3">
            <aside class="site-sidebar" role="complementary">
                {{ page.page_sidebar }}
            </aside>
          </div>
        {% endif %}

      <div class="{{ col_class }}">
        <main class="content__main-content clearfix" role="main">
          <div class="visually-hidden"><a id="main-content" tabindex="-1"></a></div>
          {% if page.highlighted %}
            {{ page.highlighted }}
          {% endif %}
          {% if page.above_content %}
            {{ page.above_content }}
          {% endif %}
          {% if page.content %}
            {{ page.content }}
          {% endif %}
          {% if page.below_content %}
            {{ page.below_content }}
          {% endif %}
        </main>
      </div>
    </div>
  </div>
</div>
{# / Main Content. #}

{# Site Footer. #}
{% include base_path ~ directory ~ '/templates/pages/includes/site_footer.html.twig' %}
{# / Site Footer. #}
