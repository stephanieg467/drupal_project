{#
/**
 * @file
 * Theme implementation for about us page.
 *
 * Available variables:
 * - link_1_url: Link 1 url
 * - link_2_url: Link 2 url
 *
 * @see template_preprocess_node()
 */
#}
{%
    set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted',
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
    'clearfix',
]
%}
<article{{ attributes.addClass(classes) }}>
    <header>

        {#
        {% if page_header_image_url %}
          <div class="page-header-image">
            <img src="{{ page_header_image_url }}" alt="{{ node.field_page_header_image.alt.value }}" />
          </div>
        {% endif %}
        #}

        {{ title_prefix }}
        {% if not page %}
            <h2{{ title_attributes.addClass('node__title') }}>
                <a href="{{ url }}" rel="bookmark">{{ label }}</a>
            </h2>
            {#
            {% else %}
              <h1{{ title_attributes.addClass('page-title') }}>
                {{ label }}
              </h1>
            #}
        {% endif %}
        {{ title_suffix }}

        {% if display_submitted %}
            <div class="node__meta">
                {{ author_picture }}
                <span{{ author_attributes }}>
          {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        </span>
                {{ metadata }}
            </div>
        {% endif %}
    </header>

    <div{{ content_attributes.addClass('node__content', 'clearfix', 'about-us') }}>

        <div class="row">

            <div class="col-xs-12 col-md-12">
                {{ content.field_page_header_image }}
            </div>

        </div>

        <div class="row">

            <div class="col-xs-12 col-md-12">
                {{ content.field_title }}
            </div>

        </div>

        <div class="row">

            <div class="col-xs-12 col-md-12">
                {{ content.body }}
            </div>

        </div>

        <div class="row">

            <div class="col-xs-12 col-md-12">
                {{ content.field_body }}
            </div>

        </div>

        <div class="row">

            <div class="about-us__links">
                <div class="col-xs-12 col-md-6 about-us__links--link-1">
                    <a href="{{ link_1_url }}" class="button button--large btn btn-primary"><span>{{ node.field_link_1.title  }}</span></a>
                </div>
                <div class="col-xs-12 col-md-6 about-us__links--link-2">
                    <a href="{{ link_2_url }}" class="button btn btn-primary"><span>{{ node.field_link.title  }}</span></a>
                </div>
            </div>

        </div>

    </div>
</article>